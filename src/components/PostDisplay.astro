---
import type { BlogPost } from "../lib/notion/types";

interface Props {
    post: BlogPost;
}

const { post } = Astro.props;
---

<div
    class="flex flex-col p-4 bg-slate-300 border-gray-600 rounded border gap-1"
>
    <h3>
        <a href=`/${post.slug}` class="text-blue-500 text-xl">{post.title}</a>
    </h3>
    <div class="flex flex-row gap-2">
        <p>{post.author.name}</p>
        <p>{post.createdAt.toISOString()}</p>
    </div>
    <p>{post.tagline}</p>
    <a href=`/${post.slug}` class="text-blue-500">Read more...</a>
</div>
